@model StudentManagement.Areas.Teacher.Data.StudentClassModel

@{
    ViewBag.Title = "Add Student Class";
}

<div class="col-xl-11" style="margin:auto">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h3 class="m-0 font-weight-bold text-primary">Add Student Class</h3>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-12 mx-auto" style="height:430px">
                    <form method="post" action="/addStudentClasst" class="nav-item">
                        <div style="padding-top:10px" class="mx-auto">
                            <table class="col-xl-10 mx-auto">

                                <tr>
                                    <td style="padding:20px"><strong>Choose available student to add to class: </strong></td>
                                    <td>
                                        @Html.HiddenFor(m => m.ClassID, new { @classID = Model.ClassID })
                                        @if (Model.AvailableStudents.Any())
                                        {
                                            @Html.DropDownListFor(m => m.StudentID,
                                            new SelectList(Model.AvailableStudents, "Value", "Text"),
                                            null,
                                            new { @class = "form-control my-5 mx-auto", @style = "width: 400px" })
                                        }
                                        else
                                        {
                                            <p>No students available</p>
                                        }
                                    </td>
                                </tr>

                            </table>
                        </div>
                        <input type="submit" value="Add" class="btn btn-primary btn-user btn-block col-xl-3 mx-auto mt-4" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

