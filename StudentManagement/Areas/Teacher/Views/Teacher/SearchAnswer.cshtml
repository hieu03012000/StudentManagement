@model StudentManagement.Areas.Teacher.Data.SearchAnswerModel
@{
    ViewBag.Title = "Answers";
}

@if (Model.Test != null)
{
    @Html.Partial("_TestDetail", Model.Test)
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header ">
        <h3 class="m-0 text-primary font-weight-bold">Answer</h3>
    </div>
    <div class="card-body">
        <form>

            @if (Model.Answers.List.Count > 0)
            {
                <div class="row">
                    @Html.Partial("_AnswerList", Model.Answers)
                </div>
            }
            else
            {
                @: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; No answers found...
            }

        </form>
    </div>
</div>
